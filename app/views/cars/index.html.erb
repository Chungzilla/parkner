  <h1>Your Cars</h1>

  <% if @user_has_no_cars == false %>

  <div id="cars-wrapper">

  <div class="row">
  <% @cars.each do |car| %>
    <div class="col-sm-12">
      <a href="/cars/<%= car.id%>"><button class="btn btn-outline-info">
      <%= link_to car.nickname, car %>
      </button></a>
    
      
    </div>
  <% end %>
  </div>

  <% else %> 
    <p>Looks like you don't have any cars registered. 
    <br>
    Click <%= link_to 'Here', new_car_path %> to register your first vehicle!</p>

    <% end %>
    <br>
    <% if @user_has_no_cars == false %>
    <button>
      <%= link_to 'Add New Car', new_car_path %>
    </button>
  <% end %>


