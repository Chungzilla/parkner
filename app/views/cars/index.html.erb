<div class="container-fluid">
  <div id="rowTextAlign" class ="row">
  <div id ="titleContainer" class = "col-sm-12">
  <h1>Your Cars</h1>

</div>
</div>

<div id="carOutterWrapper"> 

  <% if @user_has_no_cars == false %>

  <div id="cars-wrapper">

  <div class="row">
  <% @cars.each do |car| %>
    <div class="col-sm-12">
      <a href="/cars/<%= car.id%>">
        <button class="btn btn-info buttonWidth">
          <%= car.nickname %>
        </button>
      </a>
    
      
    </div>
  <% end %>
  </div>

  <% else %>
   
    <p>Looks like you don't have any cars registered. 
    <br>
    Click <%= link_to 'Here', new_car_path %> to register your first vehicle!</p>

    <% end %>
    <br>
    <% if @user_has_no_cars == false %>
    <button class="addButton">
      <%= link_to 'Add New Car', new_car_path %>
    </button>
    <br>
    <button class="addButton">
    <%= link_to 'Add New Parking Session', new_parking_path %>
    </button>
  <% end %>
  </div>
  <div class="borderBottom"> </div>
</div>


